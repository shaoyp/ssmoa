<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">

<struts>

	<package name="user" extends="dreamer" namespace="/"> 
		<action name="user_*" class="org.dreamer.user.action.LoginAction" method="{1}">
			<result name="login">/WEB-INF/jsp/index.jsp</result>
			<result name="show">/WEB-INF/jsp/user/show.jsp</result>
			<result name="input">login.jsp</result>
		</action>
	</package>

	
</struts>
